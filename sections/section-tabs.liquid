<div class="container" vue>
  {%- liquid
    assign titles = ''
    assign contents = ''
    assign size = section.blocks | size

    for block in section.blocks
      assign titles = titles | append: block.settings.title | append: '||'
      assign contents = contents | append: block.settings.content | append: '||'
    endfor
  -%}

