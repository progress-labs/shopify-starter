<div class="accordion py-40 container">
  <h3 class="text-2xl font-bold mb-10 text-center">{{ section.settings.headline }}</h3>

  {%- if section.blocks.size > 0 -%}
    <ul>
      {%- for block in section.blocks -%}
        <li class="py-10">
          {%- render 'block-accordion', headline: block.settings.headline, text: block.settings.text -%}
        </li>
      {%- endfor -%}
    </ul>
  {%- endif -%}
</div>

{% schema %}
