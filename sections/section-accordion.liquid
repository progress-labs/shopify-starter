  "name": "t:sections.accordion.name",
  "class": "shopify-section-vue",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "t:common.headline",
      "default": "Headline"
    }
  ],
  "blocks": [
    {
      "type": "accordion-item",
      "name": "Item",
