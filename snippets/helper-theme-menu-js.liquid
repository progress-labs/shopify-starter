{% comment %}
Global JS
---
Set liquid variables that should be accesible via js scripts.
{% endcomment %}

{%-
  liquid
  assign menu = linklists[menu_handle]
-%}

{%- if menu and menu.links.size > 0 -%}
{%- assign link_level = 1 -%}
[
  {%- for link in menu.links -%}
    {%- 
      render 'helper-theme-menu-item' 
        link: link,
        link_level: link_level, 
        children: link.links 
    -%}{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
]
{%- endif %}