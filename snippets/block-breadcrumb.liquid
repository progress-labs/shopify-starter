<div class="col-span-2 mb-5">
  <span>
    <a href="{{- routes.root_url -}}" title="{{- shop.name | escape -}}">{{ 'common.home' | t }}</a>
    /
    {% if collection %}
      <a href="{{- collection.url -}}" title="{{- collection.title | escape -}}">
        {{- collection.title -}}
      </a>
    {% else %}
      <a href="{{- collections.all.url -}}" title="{{- collections.all.title -}}">
        {{- collections.all.title -}}
      </a>
    {% endif %}
    /
    <span>{{- product.title -}}</span>
  </span>
</div>
