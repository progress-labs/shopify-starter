<div class="col-span-2 mb-5">
  <span>
    <a class="underline underline-offset-2" href="{{- routes.root_url -}}" title="{{- shop.name | escape -}}">
      {{- 'common.home' | t -}}
    </a>
    /
    {% if collection %}
      <a class="underline underline-offset-2" href="{{- collection.url -}}" title="{{- collection.title | escape -}}">
        {{- collection.title -}}
      </a>
    {% else %}
      <a class="underline underline-offset-2" href="{{- collections.all.url -}}" title="{{- collections.all.title -}}">
        {{- collections.all.title -}}
      </a>
    {% endif %}
    /
    <span>{{- product.title -}}</span>
  </span>
</div>
