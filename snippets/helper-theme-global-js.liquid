{% comment %}
  Global JS
  ---
  Set liquid variables that should be accesible via js scripts.
{% endcomment %}

<script>
  // Theme
  window.__theme = {};
  // Shopify Domain
  __theme.shopifyDomain = {{ shop.permanent_domain | json }};
  // Shopify URL
  __theme.shopifySecureUrl = {{ shop.secure_url | json }};
  // Customer
  {%- if customer -%}
  __theme.customer = {
    "id": {{ customer.id | json }},
    "email": {{ customer.email | json }}
  };
  {%- endif -%}
</script>
